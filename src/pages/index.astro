---
import Layout from '../layouts/Layout.astro';
---
<Layout>
	<!-- Hero Section -->
	<section class="relative w-full overflow-hidden">
		<img 
			src="/assets/2025preseason.jpg" 
			alt="Iron Riders Preseason 2025" 
			class="w-full h-[50vh] md:h-[70vh] object-cover object-top"
		/>
		<div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent flex items-end">
			<div class="w-full max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pb-12 md:pb-16">
				<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white font-mono drop-shadow-lg">
					THE IRON RIDERS
				</h1>
				<p class="text-lg md:text-xl text-white/90 mt-2 font-mono max-w-2xl">
					FRC 4180 â€¢ Roosevelt High School
				</p>
				<a href="/ourteam" 
					class="inline-block mt-6 px-6 py-3 bg-yellow-400 text-black font-mono font-semibold rounded-md 
					hover:bg-yellow-300 transition-colors"
				>
					Meet the Team
				</a>
			</div>
		</div>
	</section>

	<!-- Intro Section -->
	<section class="py-16 md:py-24 bg-white dark:bg-dm-light-gray/80">
		<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-dm-text font-mono mb-6">
				Welcome to The Iron Riders
			</h2>

			<!-- Intro message -->
			<p class="text-gray-600 dark:text-dm-text-muted text-lg max-w-3xl leading-relaxed">
				Welcome to The Iron Riders! We are FRC Team 4180 located in Seattle; we are a team of competitive students and mentors
				focused on building robots to learn real-world applications and skills!
			</p>
		</div>
	</section>

	<!-- Quick Links / CTA -->
	<section class="py-16 bg-gray-100 dark:bg-dm-dark-gray">
		<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-xl font-semibold text-gray-900 dark:text-dm-text font-mono mb-8">
				Get Involved
			</h2>

			<!-- Square links (tm) -->
			<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
				<!-- Our Team squarelink -->
				<a href="/ourteam" 
					class="p-6 rounded-lg bg-gray-50 hover:bg-white dark:bg-dm-light-gray dark:hover:bg-dm-highlight-gray border border-gray-200 dark:border-dm-highlight-gray 
					transition-colors duration-200"
				>
					<span class="font-mono font-medium text-gray-900 dark:text-dm-text">Our Team</span>
					<p class="mt-2 text-sm text-gray-500 dark:text-dm-text-muted">Meet the student leaders and mentors part of our community</p>
				</a>

				<!-- Join Us squarelink -->
				<a href="/joinus" 
					class="p-6 rounded-lg bg-gray-50 hover:bg-white dark:bg-dm-light-gray dark:hover:bg-dm-highlight-gray border border-gray-200 dark:border-dm-highlight-gray 
					transition-colors duration-200"
				>
					<span class="font-mono font-medium text-gray-900 dark:text-dm-text">Join Us</span>
					<p class="mt-2 text-sm text-gray-500 dark:text-dm-text-muted">If you're interested, click here for more details!</p>
				</a>

				<!-- Contact Us squarelink -->
				<a href="/contact" 
					class="p-6 rounded-lg bg-gray-50 hover:bg-white dark:bg-dm-light-gray dark:hover:bg-dm-highlight-gray border border-gray-200 dark:border-dm-highlight-gray 
					transition-colors duration-200"
				>
					<span class="font-mono font-medium text-gray-900 dark:text-dm-text">Contact Us</span>
					<p class="mt-2 text-sm text-gray-500 dark:text-dm-text-muted">If you have any questions or want more info, just ask us!</p>
				</a>

			</div>

		</div>
	</section>
</Layout>
