---
/* Imports Tailwind */
import "../styles/global.css";

/* Imports components */
import DropDownButton from '../components/DropDownButton.astro';
import Button from '../components/Button.astro';

---
<html lang="en">
  <header>
    
  </header>

  <body>

    <!-- Style Bar -->
    <hr class=" shadow p-1">

    <!-- Navbar -->
    <nav class="bg-gray-50 shadow p-2">
      <div class="container mx-auto px-4 flex items-center justify-between">

        <!-- Logo -->
        <div class="flex items-center space-x-2">
          <img src="/assets/logo.png" alt="Iron Riders Logo" class="h-12 w-auto" />
          <div class="font-mono bg-yellow-400 text-3xl p-2">IRON RIDERS</div>
        </div>

        <!-- Desktop Navigation links -->
        <div class="hidden md:flex items-center space-x-4">
        <!-- Home Button -->
          <Button 
            label="Home"
            href="/"
          />

          <!-- About Us Dropdown -->
          <DropDownButton
            label="About Us"
            id="AboutUs"
            items={[
              { href: "/OurTeam", label: "Our Team" },
              { href: "/Gallery", label: "Gallery" },
              { href: "/Mentors", label: "Mentors" }
            ]}
            />
            <!-- Resources Dropdown -->
            <DropDownButton
            label="Resources"
            id="Resources"
              items={[
              { href: "/chat", label: "Digital Resources" },
              { href: "https://opencollective.com/astrodotbuild", label: "Calander" },
              { href: "https://shop.astro.build/", label: "Sponsors" }
              ]}
            />

            <!-- Community Dropdown -->
            <DropDownButton
            label="Community"
            id="Community"
              items={[
              { href: "/chat", label: "Outreach" },
              { href: "https://opencollective.com/astrodotbuild", label: "Join" },
              { href: "https://shop.astro.build/", label: "Discord" }
              ]}
            />
        </div>

        <!-- Mobile menu button -->
        <div class="md:hidden flex items-center">
          <button id="mobile-menu-button" class="text-gray-500 focus:outline-none">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile menu content -->
      <div id="mobile-menu" class="md:hidden hidden bg-gray-50 p-4">
        <div class="flex justify-end">
          <button id="close-mobile-menu-button" class="text-gray-500 focus:outline-none">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        <div class="flex flex-col space-y-2 mt-4">   
        
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

  </body>
  <script src="../scripts/dropdown.js"></script>
  <script src="../scripts/mobileMenu.js"></script>
</html>