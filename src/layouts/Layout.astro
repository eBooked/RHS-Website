---
/* Imports Tailwind */
import "../styles/global.css";

/* Imports components */
import DropDownButton from '../components/DropDownButton.astro';
import Button from '../components/Button.astro';
import PhoneDropDownButton from "../components/PhoneDropDownButton.astro";
import PhoneButton from "../components/PhoneButton.astro";

---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script is:inline>
      (function() {
        const stored = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const isDark = stored === 'dark' || (stored !== 'light' && prefersDark);
        if (isDark) document.documentElement.classList.add('dark');
        else document.documentElement.classList.remove('dark');
      })();
    </script>
  </head>

  <body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-200">

    <!-- Style Bar, not in use -->
    <hr class="shadow p-1 border-gray-200 dark:border-gray-700">

    <!-- Navbar -->
    <nav class="bg-gray-500 dark:bg-gray-100 shadow p-2">
      <div class="container mx-auto px-4 flex items-center justify-between">

        <!-- Logo -->
        <a href="/" class="flex items-center space-x-2">
          <img src="/assets/logo.png" alt="Iron Riders Logo" class="h-15 w-auto" />
          <div class="font-mono bg-yellow-400 dark:bg-yellow-100 text-3xl p-2">IRON RIDERS</div>
        </a>

        <!-- Desktop Navigation links -->
        <div class="desktop-nav-links hidden lg:flex items-center space-x-2">
        <!-- Home Button -->
          <Button 
            label="Home"
            href="/"
          />

          <!-- About Us Dropdown -->
          <DropDownButton
            label="About Us"
            id="AboutUs"
            items={[
              { href: "/ourteam", label: "Our Team" },
              { href: "/gallery", label: "Gallery" },
              { href: "/mentors", label: "Mentors" }
            ]}
            />
            <!-- Resources Dropdown -->
            <DropDownButton
            label="Resources"
            id="Resources"
              items={[
              { href: "/chat", label: "Digital Resources" },
              { href: "https://opencollective.com/astrodotbuild", label: "Calander" },
              { href: "/sponsors", label: "Sponsors" },
              { href: "/daiwdohas", label: "Woops " }
              ]}
            />

            <!-- Community Dropdown -->
            <DropDownButton
            label="Community"
            id="Community"
              items={[
              { href: "/chat", label: "Outreach" },
              { href: "https://opencollective.com/astrodotbuild", label: "Join" },
              { href: "https://shop.astro.build/", label: "Discord" }
              ]}
            />
        </div>

        <!-- Darkmode Toggle -->
        <button id="darkmode-button" type="button" aria-label="Toggle dark mode" class="p-2 rounded-lg bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
          <!-- Sun icon (shown in dark mode) -->
          <svg class="w-5 h-5 dark:block hidden text-yellow-400" fill="currentColor" viewBox="0 0 20 20"><path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"/></svg>
          <!-- Moon icon (shown in light mode) -->
          <svg class="w-5 h-5 dark:hidden block text-gray-600" fill="currentColor" viewBox="0 0 20 20"><path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"/></svg>
        </button>

        <!-- Mobile menu button -->
        <div class="lg:hidden flex items-center">
          <button id="mobile-menu-button" class="text-gray-500 dark:text-gray-400 focus:outline-none hover:text-gray-800 dark:hover:text-gray-200 transition-colors duration-200">

            <!-- The concept of this is that essentially you get a shape. You could also use html entities -->
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
            
          </button>
        </div>
      </div>
    </nav>
    <!-- End of navbar -->

    <!-- Secondary Navbar for smaller devices -->
    <nav id="mobile-menu" class="lg:hidden hidden bg-gray-100 dark:bg-gray-800 shadow p-1">

      <!-- Mobile menu content wrapper-->
      <div class="mobile-nav-links lg:hidden flex">

        <!-- Menu Content -->
        
        <!-- These are the same, but have different design on the menus. Fundementally, just put in whichever links and it should
         all work out -->
        <div class="flex flex-col items-start w-full px-4 py-4 rounded-lg">   
          <!-- Removed until needed; the logo functions as home
          <PhoneButton 
            label="Home"
            href="/"
          />
          -->
          <PhoneDropDownButton
            label="About Us"
            id="PhoneAboutUs"
            items={[
              { href: "/ourteam", label: "Our Team" },
              { href: "/gallery", label: "Gallery" },
              { href: "/mentors", label: "Mentors" }
            ]}
          />
          <PhoneDropDownButton
            label="Resources"
            id="PhoneResources"
              items={[
              { href: "/chat", label: "Digital Resources" },
              { href: "https://opencollective.com/astrodotbuild", label: "Calander" },
              { href: "/sponsors", label: "Sponsors" },
              ]}
          />
          <PhoneDropDownButton
            label="Community"
            id="PhoneCommunity"
              items={[
              { href: "/chat", label: "Outreach" },
              { href: "https://opencollective.com/astrodotbuild", label: "Join" },
              { href: "https://shop.astro.build/", label: "Discord" }
              ]}
          />  
        </div>

        <!-- Close Menu Button -->
        <div class="justify-end px-5 py-5 bg-gray-200 dark:bg-gray-700">
          <button id="close-mobile-menu-button" class="text-gray-500 dark:text-gray-400 focus:outline-none hover:text-gray-800 dark:hover:text-gray-200 transition-colors duration-150">

            <!-- Again, don't worry about this, it's just for a symbol -->
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>

          </button>
        </div>

      </div>
    </nav>

    <!-- Main Page Content -->
    <main>
      <slot />
    </main>

    <!-- Footer of each page; no components required. No 'secondary footer'. Simply stylized links and images :) 
         Sorry for the wall of hrefs... -->
    <footer class="mt-16 border-t border-gray-300 dark:border-gray-700 bg-gray-100 dark:bg-gray-800">
      <div class="max-w-6xl mx-auto px-6 py-10">
    
        <!-- Top section -->
        <div class="flex flex-col md:flex-row justify-between gap-8">
    
          <!-- Brand -->
          <div>
            <h2 class="text-lg font-semibold font-mono bg-yellow-400 p-2">The Iron Riders, FRC 4180</h2>
            <p class="text-sm font-mono text-gray-500 dark:text-gray-400 mt-2 p-2">
              Roosevelt High School
            </p>
          </div>
    
          <!-- Links -->
          <div class="grid grid-cols-3 gap-8 text-sm">
            <div class="flex flex-col space-y-2">
              <span class="font-medium font-mono">About Us</span>
              <a href="#" class="hover:text-black dark:hover:text-white text-gray-500 dark:text-gray-400 font-mono">Our Team</a>
              <a href="#" class="hover:text-black dark:hover:text-white text-gray-500 dark:text-gray-400 font-mono">Mentors</a>
              <a href="#" class="hover:text-black dark:hover:text-white text-gray-500 dark:text-gray-400 font-mono">Archive</a>
            </div>
    
            <div class="flex flex-col space-y-2 font-mono">
              <span class="font-medium">Resources</span>
              <a href="#" class="hover:text-black dark:hover:text-white text-gray-500 dark:text-gray-400 font-mono">Digital Resources</a>
              <a href="#" class="hover:text-black dark:hover:text-white text-gray-500 dark:text-gray-400 font-mono">Calander</a>
            </div>

            <div class="flex flex-col space-y-2 font-mono">
              <span class="font-medium">Community</span>
              <a href="#" class="hover:text-black dark:hover:text-white text-gray-500 dark:text-gray-400">Contact Us</a>
              <a href="#" class="hover:text-black dark:hover:text-white text-gray-500 dark:text-gray-400">Join</a>
              <a href="#" class="hover:text-black dark:hover:text-white text-gray-500 dark:text-gray-400">Donate</a>
            </div>
          </div>
    
        </div>
    
        <!-- Bottom bar for footer -->
        <div class="mt-10 pt-6 border-t border-gray-300 dark:border-gray-700 text-xs text-gray-800 dark:text-gray-300 text-center">
          <!-- If text wanted, put it here -->
        </div>
    
      </div>
    </footer>

  </body>
  <script src="../scripts/dropdown.js"></script>
  <script src="../scripts/phoneDropdown.js"></script>
  <script src="../scripts/mobileMenu.js"></script>
  <script src="../scripts/darkmode.js"></script>
</html>