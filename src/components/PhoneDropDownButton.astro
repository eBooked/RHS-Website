---
interface Props {
  label: string;
  id: string;
  items: { href: string; label: string }[];
}

const { label, id, items } = Astro.props as Props;
---

<div class="relative group inline-block ">

    <!-- Button -->
    <button 
      id= {`${id}-phone-btn`}
      data-dropdown-id={id}
      class="w-[var(--button-width)] px-[var(--button-padding-x)] py-[var(--button-padding-y)] text-lm-text dark:text-dm-text rounded-md hover:bg-lm-highlight-gray dark:hover:bg-dm-highlight-gray 
        transition-colors duration-150 flex items-center justify-center font-mono md:pointer-events-auto"
    >
        <!-- Text set to label -->
        {label}       
        <img src="/assets/DownArrow.png" alt="Arrow" class="filter invert-0 dark:invert h-3 w-auto px-2 inline-block transition-transform duration-300"
        id={`${id}-phone-arrow`}
         />
    </button>
  </div>
    
    <!-- Hidden menu -->
    <div 
      id= {`${id}-phone-menu`}
      class=
        "absolute left-45 top-25 w-50 bg-lm-dark-gray dark:bg-dm-light-gray rounded-md scale-95 opacity-0 pointer-events-none transition-all duration-200 
         origin-top p-2 font-sans md:pointer-events-auto z-10"
    >

        <!-- Repeats for each item, creates its own tab -->
        {items.map(item => (
            <a href={item.href} class="flex items-center pr-2 py-0 hover:bg-lm-highlight-gray dark:hover:bg-dm-highlight-gray text-lm-text dark:text-dm-text transition-colors duration-150">
              <!-- Yellow Bar -->
              <span class="w-0.5 h-10 bg-yellow-400 mr-2"></span>

              {item.label}
            </a>
          ))}
    </div>
